<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_canny_equalizeHise"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:text="灰度，对比增强"
        app:layout_constraintStart_toEndOf="@+id/btn_gray2"
        app:layout_constraintTop_toBottomOf="@+id/btn_getimg" />

    <Button
        android:id="@+id/btn_canny2"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Canny边缘"
        app:layout_constraintStart_toEndOf="@+id/btn_gray2"
        app:layout_constraintTop_toBottomOf="@+id/btn_getimg" />

    <Button
        android:id="@+id/btn_gray2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="灰度化"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shape1"
        app:layout_constraintVertical_bias="0.243" />

    <Button
        android:id="@+id/btn_dilate_contours_rectandle"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:text="dilate_contours_rectangle"
        app:layout_constraintStart_toEndOf="@+id/btn_Binarization"
        app:layout_constraintTop_toBottomOf="@+id/btn_canny" />

    <Button
        android:id="@+id/btn_contours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:text="contours"
        app:layout_constraintStart_toEndOf="@+id/btn_canny_dilate"
        app:layout_constraintTop_toTopOf="@+id/btn_canny_dilate" />

    <ImageView
        android:id="@+id/shape1"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/input_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btn_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="灰度化"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shape1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_Binarization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="二值化"
        app:layout_constraintStart_toEndOf="@+id/btn_gray"
        app:layout_constraintTop_toTopOf="@+id/btn_gray" />

    <Button
        android:id="@+id/btn_canny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Canny边缘"
        app:layout_constraintStart_toEndOf="@+id/btn_Binarization"
        app:layout_constraintTop_toTopOf="@+id/btn_Binarization" />

    <ImageView
        android:id="@+id/shape2"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/Processed_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shape1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/btn_getimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="获取图片"
        app:layout_constraintBottom_toTopOf="@+id/shape2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Binarization"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/canny_th1"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="number"
        android:text="20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_canny" />

    <EditText
        android:id="@+id/canny_th2"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="number"
        android:text="100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_canny" />

    <Button
        android:id="@+id/btn_canny_dilate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="canny_dilate"
        app:layout_constraintStart_toEndOf="@+id/btn_canny"
        app:layout_constraintTop_toTopOf="@+id/btn_canny" />

    <Button
        android:id="@+id/btn_dilate_contours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="dilate_contours"
        app:layout_constraintStart_toEndOf="@+id/btn_canny_dilate"
        app:layout_constraintTop_toTopOf="@+id/btn_canny_dilate" />

    <Button
        android:id="@+id/btn_full_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="full_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_gray" />

    <Button
        android:id="@+id/btn_get_allshape_contours"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="all_shape_contours"
        app:layout_constraintStart_toEndOf="@+id/canny_th2"
        app:layout_constraintTop_toBottomOf="@+id/btn_dilate_contours_rectandle" />

    <ImageView
        android:id="@+id/shape3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shape1"
        app:srcCompat="@mipmap/ic_launcher_round" />

</android.support.constraint.ConstraintLayout>